<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <style name="AppBaseTheme" parent="android:Theme.Light"></style>

    <!-- Application theme. -->
    <style name="AppTheme" parent="AppBaseTheme"></style>

    <style name="titlebar" parent="android:Theme">
        <item name="android:windowTitleSize">50dp</item>
        <item name="android:windowTitleBackgroundStyle">@style/CustomWindowTitleBackground</item>
    </style>

    <style name="CustomWindowTitleBackground">
        <item name="android:background">#222222</item>
    </style>

    <style name="main">
        <item name="android:background">#FEFFDB</item>
        <item name="android:padding">10dp</item>
    </style>

    <style name="textview_title">
        <item name="android:textSize">24sp</item>
        <item name="android:textColor">#FFFFFF</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="textview_calendar_day">
        <item name="android:background">#BBBBBB</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">#FFFFFF</item>
        <item name="android:gravity">center_horizontal|center_vertical</item>
    </style>

    <color name="textview_calendar_day_unenable">#999999</color>

    <style name="textview_calendar_week">
        <item name="android:background">#666666</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">#FFFFFF</item>
    </style>

    <style name="textview_calendar_month">
        <item name="android:textSize">24sp</item>
        <item name="android:textColor">#333333</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="textview_modify_month">
    </style>

</resources>